$color-background = #222
$color-text = #fff
body,html
  line-height 1
	user-select none
	-webkit-tap-higlight-color transparent
	background $color-background
	color $color-text
	width 100%
	max-width 640px

body
  width 100%
  max-width 640px
  overflow  hidden
  margin auto
  background $color-background
//不换行
no-wrap()
  text-overflow ellipsis
  overflow hidden
  white-space nowrap

//扩展点击区域
extend-click()
  position relative
  &:before
    content ''
    position absolute
    top -10px
    left -10px
    right -10px
    bottom -10px

img
  display bloclk
  width 100%